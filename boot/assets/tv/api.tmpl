{{define "api"}}
<!DOCTYPE html>
<html lang="en" class="color-toggle-light" color-mode="light">
{{template "head"}}

<body itemscope="" itemtype="https://schema.org/WebPage">
{{template "svg-sprite"}}

<div class="wrapper dark-mode-dim">
        {{template "header"}}

        <main class="container flex flex-even">
                {{template "aside"}}
                <!--- main page --->
                <div class="gdoc-page">
                        <!--- header nav --->
                        <div class="gdoc-page__header flex flex-wrap justify-between" itemprop="breadcrumb">
                                <div>
                                        <svg class="icon gdoc_path hidden-mobile"><use xlink:href="#gdoc_path"></use></svg>
                                        <ol class="breadcrumb" itemscope="" itemtype="https://schema.org/BreadcrumbList">
                                                <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                                                        <a itemscope="" itemtype="https://schema.org/WebPage" itemprop="item" itemid="/v1/rk/tv/application/" href="/v1/rk/tv/application/">
                                                                <span itemprop="name">Application</span>
                                                                <meta itemprop="position" content="1">
                                                        </a>
                                                </li>
                                                <li>/</li>
                                                <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                                                        <span itemprop="name">API</span>
                                                        <meta itemprop="position" content="1">
                                                </li>
                                        </ol>
                                </div>
                        </div>

                        <!--- content --->
                        <article class="gdoc-markdown">
                                <!--- title --->
                                <div class="gdoc-page__anchorwrap">
                                        <h1 id="example"> API <a data-clipboard-text="https://geekdocs.de/shortcodes/tabs/#example" class="gdoc-page__anchor gdoc-page__anchor--right clip" aria-label="Anchor Example" href="#example">
                                                        <svg class="icon gdoc_link"><use xlink:href="#gdoc_link"></use></svg>
                                                </a>
                                        </h1>
                                </div>
                                <!--- content --->
                                <table>
                                        <thead>
                                        <tr>
                                                <th>Entry Name</th>
                                                <th>Method</th>
                                                <th>Path</th>
                                                <th>Port</th>
                                                <th>Swagger URL</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{ range . }}
                                                <tr>
                                                        <td>{{ .Name }}</td>
                                                        <td>{{ .Method }}</td>
                                                        <td>{{ .Path }}</td>
                                                        <td>{{ .Port }}</td>
                                                        <td><a target="_blank" href="{{ .SwUrl }}">{{ .SwUrl }}</a></td>
                                                </tr>
                                        {{ end }}
                                        </tbody>
                                </table>
                        </article>
                </div>
        </main>
        {{template "footer"}}
</div>
</body>
</html>
{{end}}